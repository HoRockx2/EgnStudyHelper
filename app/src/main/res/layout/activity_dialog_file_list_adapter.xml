<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.horockx2.egnstudyhelper.dialogFileListAdapter"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/FileName"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:gravity="center|left"
        android:textSize="16sp"
        tools:text="hello"/>

    <TextView
        android:id="@+id/last_checked_date"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:gravity="center"
        android:textSize="16sp"
        tools:text="test"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_toLeftOf="@id/FailCheck"/>

    <ImageView
        android:id="@+id/FailCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/exclamation_mark"
        android:layout_toLeftOf="@id/DailyCheck"

        android:visibility="visible"/>

    <ImageView
        android:id="@+id/DailyCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@mipmap/check_mark"
        android:layout_alignParentRight="true"
        android:visibility="invisible"
        android:gravity="center|right"
        android:textSize="34sp"

        tools:text="A"/>
</RelativeLayout>
